{
    "name": "fivelab/resource-bundle",
    "description": "Add the resource system to symfony application",
    "keywords": [ "resource", "rest", "api", "hateoas", "webapi" ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Vitaliy Zhuk",
            "email": "v.zhuk@fivelab.org"
        },

        {
            "name": "FiveLab Team",
            "email": "dev@fivelab.org",
            "homepage": "http://fivelab.org"
        }
    ],

    "require": {
        "php": "~7.4 || ~8.0",
        "sensio/framework-extra-bundle": "~4.4 || ~5.0",
        "symfony/property-info": "~4.4 || ~5.0",
        "psr/log": "~1.0",
        "fivelab/resource": "dev-master"
    },

    "require-dev": {
        "phpunit/phpunit": "~9.5",
        "phpmetrics/phpmetrics": "~2.0",
        "escapestudios/symfony2-coding-standard": "~3.5",
        "matthiasnoback/symfony-dependency-injection-test": "~4.0",
        "symfony/validator": "~4.4 || ~5.0",
        "symfony/security": "~4.4 || ~5.0",
        "symfony/yaml": "~4.4 || ~5.0",
        "phpstan/phpstan": "~0.12.85"
    },

    "autoload": {
        "psr-4": { "FiveLab\\Bundle\\ResourceBundle\\": "src/" }
    },

    "autoload-dev": {
        "psr-4": { "FiveLab\\Bundle\\ResourceBundle\\Tests\\": "tests/" }
    },

    "config": {
        "bin-dir": "bin"
    },

    "extra": {
        "thanks": {
            "name": "fivelab/resource-bundle",
            "url": "https://github.com/FiveLab/ResourceBundle"
        }
    }
}
