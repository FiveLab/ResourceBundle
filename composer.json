{
    "name": "fivelab/resource-bundle",
    "description": "Add the resource system to symfony application",
    "keywords": [ "resource", "rest", "api", "hateoas", "webapi" ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Vitaliy Zhuk",
            "email": "v.zhuk@fivelab.org"
        },

        {
            "name": "FiveLab Team",
            "email": "dev@fivelab.org",
            "homepage": "http://fivelab.org"
        }
    ],

    "require": {
        "php": ">=7.1",
        "sensio/framework-extra-bundle": "~3.0 || ~4.0 || ~5.0",
        "symfony/property-info": "~3.0",
        "psr/log": "~1.0.0",
        "fivelab/resource": "~1.0.0",
        "fivelab/exception": "~1.0"
    },

    "require-dev": {
        "phpunit/phpunit": "^6.2",
        "phpmetrics/phpmetrics": "^2.0",
        "escapestudios/symfony2-coding-standard": "~2.0",
        "symfony/validator": "~3.0",
        "symfony/security": "~3.0",
        "symfony/yaml": "~3.0"
    },

    "autoload": {
        "psr-4": { "FiveLab\\Bundle\\ResourceBundle\\": "src/" }
    },

    "autoload-dev": {
        "psr-4": { "FiveLab\\Component\\ResourceBundle\\Tests\\": "tests/" }
    },

    "config": {
        "bin-dir": "./bin/"
    }
}
