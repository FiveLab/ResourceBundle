<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    
    <parameters>
        <!-- Web Api Serializer -->
        <parameter key="fivelab.resource.serializer.web_api_json.class">FiveLab\Component\Resource\Serializers\WebApi\WebApiSerializer</parameter>
        <parameter key="fivelab.resource.serializer.web_api_json.supportable.class">FiveLab\Component\Resource\Serializer\Resolver\AcceptFormatSupportable</parameter>

        <parameter key="fivelab.resource.serializer.web_api_xml.class">FiveLab\Component\Resource\Serializers\WebApi\WebApiSerializer</parameter>
        <parameter key="fivelab.resource.serializer.web_api_xml.supportable.class">FiveLab\Component\Resource\Serializer\Resolver\AcceptFormatSupportable</parameter>

        <!-- Hateoas Serializer -->
        <parameter key="fivelab.resource.serializer.hateoas.normalizer.relation_object.class">FiveLab\Component\Resource\Serializers\Hateoas\Normalizer\RelationObjectNormalizer</parameter>
        <parameter key="fivelab.resource.serializer.hateoas.normalizer.paginated_collection_object.class">FiveLab\Component\Resource\Serializers\Hateoas\Normalizer\PaginatedCollectionObjectNormalizer</parameter>
        <parameter key="fivelab.resource.serializer.hateoas.normalizer.relation_collection_object.class">FiveLab\Component\Resource\Serializers\Hateoas\Normalizer\RelationCollectionObjectNormalizer</parameter>
        <parameter key="fivelab.resource.serializer.hateoas.normalizer.resource_collection_object.class">FiveLab\Component\Resource\Serializers\Hateoas\Normalizer\ResourceCollectionObjectNormalizer</parameter>

        <parameter key="fivelab.resource.serializer.hateoas_json.class">FiveLab\Component\Resource\Serializers\Hateoas\HateoasSerializer</parameter>
        <parameter key="fivelab.resource.serializer.hateoas_json.supportable.class">FiveLab\Component\Resource\Serializer\Resolver\AcceptFormatSupportable</parameter>

        <!-- Vnd.Error -->
        <parameter key="fivelab.resource.serializer.vnd_error.normalizer.error_resource_object.class">FiveLab\Component\Resource\Serializers\VndError\Normalizer\ErrorResourceObjectNormalizer</parameter>
        <parameter key="fivelab.resource.serializer.vnd_error.normalizer.error_collection_object.class">FiveLab\Component\Resource\Serializers\VndError\Normalizer\ErrorCollectionObjectNormalizer</parameter>
        <parameter key="fivelab.resource.serializer.vnd_error.normalizer.relation_object.class">FiveLab\Component\Resource\Serializers\Hateoas\Normalizer\RelationObjectNormalizer</parameter>
        <parameter key="fivelab.resource.serializer.vnd_error.normalizer.relation_collection_object.class">FiveLab\Component\Resource\Serializers\Hateoas\Normalizer\RelationCollectionObjectNormalizer</parameter>

        <parameter key="fivelab.resource.serializer.vnd_error_json.class">FiveLab\Component\Resource\Serializers\VndError\VndErrorSerializer</parameter>
        <parameter key="fivelab.resource.serializer.vnd_error_json.supportable.class">FiveLab\Component\Resource\Serializer\Resolver\AcceptFormatSupportable</parameter>
    </parameters>
    
    <services>
        <!-- Web Api Serializer -->
        <service id="fivelab.resource.serializer.web_api_json" class="%fivelab.resource.serializer.web_api_json.class%" public="false">
            <argument type="service" id="fivelab.resource.serializer"/>
            <argument>json</argument>
            <tag name="resource.serializer" supportable="fivelab.resource.serializer.web_api_json.supportable"/>
        </service>

        <service id="fivelab.resource.serializer.web_api_json.supportable" class="%fivelab.resource.serializer.web_api_json.supportable.class%" public="false">
            <argument type="collection">
                <argument>application/json</argument>
            </argument>
        </service>

        <!-- Hateoas Serializer -->
        <service id="fivelab.resource.serializer.hateoas.normalizer.relation_object" class="%fivelab.resource.serializer.hateoas.normalizer.relation_object.class%" public="false"/>
        <service id="fivelab.resource.serializer.hateoas.normalizer.paginated_collection_object" class="%fivelab.resource.serializer.hateoas.normalizer.paginated_collection_object.class%" public="false"/>
        <service id="fivelab.resource.serializer.hateoas.normalizer.relation_collection_object" class="%fivelab.resource.serializer.hateoas.normalizer.relation_collection_object.class%" public="false"/>
        <service id="fivelab.resource.serializer.hateoas.normalizer.resource_collection_object" class="%fivelab.resource.serializer.hateoas.normalizer.resource_collection_object.class%" public="false"/>

        <service id="fivelab.resource.serializer.hateoas_json" class="%fivelab.resource.serializer.hateoas_json.class%" public="false">
            <argument type="service" id="fivelab.resource.serializer"/>
            <argument type="collection">
                <argument type="service" id="fivelab.resource.serializer.hateoas.normalizer.relation_object"/>
                <argument type="service" id="fivelab.resource.serializer.hateoas.normalizer.paginated_collection_object"/>
                <argument type="service" id="fivelab.resource.serializer.hateoas.normalizer.relation_collection_object"/>
                <argument type="service" id="fivelab.resource.serializer.hateoas.normalizer.resource_collection_object"/>
            </argument>
            <argument>json</argument>
            <tag name="resource.serializer" supportable="fivelab.resource.serializer.hateoas_json.supportable"/>
        </service>

        <service id="fivelab.resource.serializer.hateoas_json.supportable" class="%fivelab.resource.serializer.hateoas_json.supportable.class%" public="false">
            <argument type="collection">
                <argument>application/hal+json</argument>
            </argument>
            <argument type="collection"/>
            <argument type="collection">
                <argument>FiveLab\Component\Resource\Resource\Error\ErrorResourceInterface</argument>
            </argument>
        </service>

        <!-- Vnd.Error -->
        <service id="fivelab.resource.serializer.vnd_error.normalizer.error_resource_object" class="%fivelab.resource.serializer.vnd_error.normalizer.error_resource_object.class%" public="false"/>
        <service id="fivelab.resource.serializer.vnd_error.normalizer.error_collection_object" class="%fivelab.resource.serializer.vnd_error.normalizer.error_collection_object.class%" public="false"/>
        <service id="fivelab.resource.serializer.vnd_error.normalizer.relation_object" class="%fivelab.resource.serializer.vnd_error.normalizer.relation_object.class%" public="false"/>
        <service id="fivelab.resource.serializer.vnd_error.normalizer.relation_collection_object" class="%fivelab.resource.serializer.vnd_error.normalizer.relation_collection_object.class%" public="false"/>

        <service id="fivelab.resource.serializer.vnd_error_json" class="%fivelab.resource.serializer.vnd_error_json.class%">
            <argument type="service" id="fivelab.resource.serializer"/>
            <argument type="collection">
                <argument type="service" id="fivelab.resource.serializer.vnd_error.normalizer.relation_object"/>
                <argument type="service" id="fivelab.resource.serializer.vnd_error.normalizer.relation_collection_object"/>
                <argument type="service" id="fivelab.resource.serializer.vnd_error.normalizer.error_collection_object"/>
                <argument type="service" id="fivelab.resource.serializer.vnd_error.normalizer.error_resource_object"/>
            </argument>
            <argument>json</argument>
            <tag name="resource.serializer" supportable="fivelab.resource.serializer.vnd_error_json.supportable"/>
        </service>

        <service id="fivelab.resource.serializer.vnd_error_json.supportable" class="%fivelab.resource.serializer.vnd_error_json.supportable.class%">
            <argument type="collection">
                <argument>application/vnd.error+json</argument>
            </argument>
            <argument type="collection">
                <argument>FiveLab\Component\Resource\Resource\Error\ErrorResourceInterface</argument>
            </argument>
        </service>
    </services>
</container>
