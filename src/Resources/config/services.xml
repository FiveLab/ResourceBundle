<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <imports>
        <import resource="serializer.xml"/>
        <import resource="serializers.xml"/>
    </imports>

    <parameters>
        <parameter key="fivelab.resource.assembler_resolver.class">FiveLab\Component\Resource\Assembler\Resolver\ResourceAssemblerResolver</parameter>
        <parameter key="fivelab.resource.serializer_resolver.class">FiveLab\Component\Resource\Serializer\Resolver\ResourceSerializerResolver</parameter>
        <parameter key="fivelab.resource.serializer.context_collector.class">FiveLab\Component\Resource\Serializer\Context\Collector\SerializationContextCollectorChain</parameter>
        <parameter key="fivelab.resource.event_listener.presentation_view.class">FiveLab\Bundle\ResourceBundle\EventListener\PresentationViewListener</parameter>
        <parameter key="fivelab.resource.event_listener.validate_resource.class">FiveLab\Bundle\ResourceBundle\EventListener\ValidateResourceListener</parameter>
        <parameter key="fivelab.resource.event_listener.exception.class">FiveLab\Bundle\ResourceBundle\EventListener\ExceptionListener</parameter>
        <parameter key="fivelab.resource.event_listener.exception_logging.class">FiveLab\Bundle\ResourceBundle\EventListener\LoggingExceptionListener</parameter>
        <parameter key="fivelab.resource.param_converter.resource.class">FiveLab\Bundle\ResourceBundle\ParamConverter\ResourceParamConverter</parameter>

        <parameter key="fivelab.resource.error_presentation_factory.class">FiveLab\Bundle\ResourceBundle\Resource\Error\ErrorPresentationFactoryChain</parameter>
        <parameter key="fivelab.resource.error_presentation_factory.validation_failed.class">FiveLab\Bundle\ResourceBundle\Resource\Error\Factory\ValidationFailedErrorPresentationFactory</parameter>
    </parameters>

    <services>
        <service id="fivelab.resource.serializer_resolver" class="%fivelab.resource.serializer_resolver.class%"/>
        <service id="fivelab.resource.serializer.context_collector" class="%fivelab.resource.serializer.context_collector.class%"/>

        <!-- Assembler system -->
        <service id="fivelab.resource.assembler_resolver" class="%fivelab.resource.assembler_resolver.class%"/>

        <!-- Param converters -->
        <service id="fivelab.resource.param_converter.resource" class="%fivelab.resource.param_converter.resource.class%">
            <argument type="service" id="fivelab.resource.serializer_resolver"/>
            <argument type="service" id="fivelab.resource.serializer.context_collector"/>
            <tag name="request.param_converter"/>
        </service>

        <!-- Listeners -->
        <service id="fivelab.resource.event_listener.presentation" class="%fivelab.resource.event_listener.presentation_view.class%">
            <argument type="service" id="fivelab.resource.serializer_resolver"/>
            <argument type="service" id="fivelab.resource.serializer.context_collector"/>
            <tag name="kernel.event_listener" event="kernel.view" method="onKernelView"/>
        </service>

        <service id="fivelab.resource.event_listener.validate_resource" class="%fivelab.resource.event_listener.validate_resource.class%" abstract="true">
            <argument type="service" id="validator"/>
            <tag name="kernel.event_listener" event="kernel.controller_arguments" method="onKernelControllerArguments"/>
        </service>

        <service id="fivelab.resource.event_listener.exception" class="%fivelab.resource.event_listener.exception.class%" public="false">
            <argument type="service" id="fivelab.resource.error_presentation_factory"/>
            <argument type="service" id="fivelab.resource.serializer_resolver"/>
            <argument type="service" id="fivelab.resource.serializer.context_collector"/>
            <argument/>
            <argument>%kernel.debug%</argument>
        </service>

        <service id="fivelab.resource.event_listener.exception_logging" class="%fivelab.resource.event_listener.exception_logging.class%" abstract="true">
            <argument type="service" id="fivelab.resource.event_listener.exception"/>
            <argument type="service" id="logger" on-invalid="null"/>
            <argument/>
        </service>

        <!-- Error presentation factory -->
        <service id="fivelab.resource.error_presentation_factory" class="%fivelab.resource.error_presentation_factory.class%"/>

        <service id="fivelab.resource.error_presentation_factory.validation_failed" class="%fivelab.resource.error_presentation_factory.validation_failed.class%" public="false" abstract="true">
            <argument>Validation failed.</argument>
            <argument>ValidationFailed</argument>
            <tag name="resource.error_presentation"/>
        </service>
    </services>
</container>
